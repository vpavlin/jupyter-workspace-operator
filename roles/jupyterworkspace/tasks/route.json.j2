{
    "kind": "Route",
    "apiVersion": "v1",
    "metadata": {
        "name": "{{ name }}",
        "namespace": {{ meta.namespace }},
        "labels": {
            "app": "{{ name }}"
        },
        "annotations": {
            "kubernetes.io/tls-acme": "true"
        },
    },
    "spec": {
        "host": "",
        "to": {
            "kind": "Service",
            "name": "{{ name }}",
            "weight": 100
        },
        "port": {
            "targetPort": "jupyter-tcp"
        },
        "tls": {
{% if openshift_auth %}
            "termination": "Reencrypt",
{% else %}
            "termination": "Edge",
{% endif %}
            "insecureEdgeTerminationPolicy": "Redirect"
        }
    }
}